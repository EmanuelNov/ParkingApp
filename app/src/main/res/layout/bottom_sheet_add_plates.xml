<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/addPlatesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Add new plates"
        android:fontFamily="@font/dm_sans"
        android:textFontWeight="700"
        android:textColor="#1B1E2C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <EditText
        android:id="@+id/platesInput"
        android:layout_width="0dp"
        android:layout_height="53dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addPlatesTitle"
        android:background="@drawable/input_plates_outline"
        android:imeOptions="actionDone"
        android:hint="Example: 01-111-AA"
        android:textColorHint="#AFB1B9"
        android:textSize="16sp"
        android:layout_margin="24dp"
        android:gravity="center"
        android:fontFamily="@font/dm_sans"
        android:maxLength="9"
        android:textFontWeight="700"
        android:textColor="#1B1E2C"/>

    <Button
        android:id="@+id/addPlatesButton"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_margin="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/platesInput"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/pay_button_background"
        android:enabled="false"
        android:text="Add plates"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/dm_sans"
        android:textFontWeight="700"/>
</androidx.constraintlayout.widget.ConstraintLayout>
