<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:background="#F5F5F5"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_rounded_corner_gray_background"
    android:paddingBottom="16dp"
    >
    <TextView
        android:id="@+id/zoneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        android:fontFamily="@font/dm_sans"
        android:textSize="16sp"
        android:textFontWeight="600"
        android:textColor="#1B1E2C"/>

    <TextView
        android:id="@+id/pricePerHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:fontFamily="@font/dm_sans"
        android:textSize="16sp"
        android:textFontWeight="600"
        android:textColor="#1B1E2C"/>

    <TextView
        android:id="@+id/zoneNeighborhoods"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="#656577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pricePerHour"/>
    <Button
        android:id="@+id/viewOnMapButton"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zoneNeighborhoods"
        android:background="@drawable/pay_button_background"
        android:drawableEnd="@drawable/ic_location_24"
        android:drawablePadding="-24dp"
        android:text="View on Map"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/dm_sans"
        android:textFontWeight="700"/>
</androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>