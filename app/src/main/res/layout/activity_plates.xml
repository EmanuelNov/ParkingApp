<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/splash_screen_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/backTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/dm_sans"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:text="Back"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="16sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/myPlatesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My car plates:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_margin="16dp"
        android:fontFamily="@font/dm_sans"
        android:textSize="16sp"
        android:textFontWeight="500"
        android:textColor="#2A2B30"/>


    <LinearLayout
        android:id="@+id/platesHolder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myPlatesLabel"
        app:layout_constraintEnd_toEndOf="parent">



    </LinearLayout>
    <Button
        android:id="@+id/addNewPlatesButton"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/pay_button_background"
        android:text="Add new plates"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/dm_sans"
        android:textFontWeight="700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/platesHolder"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
