<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.home.MainActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical|end"
        android:background="@drawable/splash_screen_background">

        <TextView
            android:id="@+id/zonesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zones"
            android:textSize="12sp"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="8dp"
            android:drawableTop="@drawable/ic_map_marker2"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/carsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicles"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="4dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:drawableTop="@drawable/ic_car"/>

    </LinearLayout>

    <TextView
        android:id="@+id/fillTheFormToPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:text="Fill the form to pay:"
        android:fontFamily="@font/dm_sans"
        android:textSize="18sp"
        android:textFontWeight="600"
        android:textColor="#1B1E2C"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"/>
    <TextView
        android:id="@+id/selectYourCityZone"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fillTheFormToPay"
        android:text="Select your current city zone:"
        android:fontFamily="@font/dm_sans"
        android:textFontWeight="400"
        android:textColor="#1B1E2C"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/areaHolder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectYourCityZone"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/home_rounded_corner_gray_background">
        <ImageButton
            android:id="@+id/editZoneButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/zoneName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_map_marker"
            android:text="Area"
            android:textColor="#1B1E2C"
            android:textFontWeight="500"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="21dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/platesTitle"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/areaHolder"
        android:text="Fill your car plate"
        android:fontFamily="@font/dm_sans"
        android:textFontWeight="400"
        android:textColor="#1B1E2C"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/platesHolder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/platesTitle"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/home_rounded_corner_gray_background">
        <ImageButton
            android:id="@+id/editPlates"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/platesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to fill plates"
            android:textColor="#1B1E2C"
            android:textFontWeight="500"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="21dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/setReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_bell_ringing"
        android:text="Set parking reminder"
        android:textColor="#4261F4"
        android:textSize="16sp"
        android:textFontWeight="500"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintTop_toBottomOf="@+id/platesHolder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/paymentDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setReminder"
        android:text="Payment Details"
        android:fontFamily="@font/dm_sans"
        android:textFontWeight="500"
        android:textColor="#1B1E2C"
        android:layout_marginStart="24dp"
        android:layout_marginTop="33dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/paymentDetailsHolder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:paddingBottom="16dp"
        android:background="@drawable/payment_details_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/paymentDetails">
    <TextView
        android:id="@+id/cityZoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Zone"
        android:fontFamily="@font/dm_sans"
        android:textColor="#656577"
        android:textFontWeight="400"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/carPlatesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Plates"
            android:fontFamily="@font/dm_sans"
            android:textColor="#656577"
            android:textFontWeight="400"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cityZoneLabel"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/maxStayDurationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max stay duration"
            android:fontFamily="@font/dm_sans"
            android:textColor="#656577"
            android:textFontWeight="400"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/carPlatesLabel"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/totalToPayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total to pay"
            android:fontFamily="@font/dm_sans"
            android:textColor="#1B1E2C"
            android:textFontWeight="500"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/maxStayDurationLabel"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/cityAreaValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dm_sans"
            android:textColor="#1B1E2C"
            android:textFontWeight="500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/carPlatesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dm_sans"
            android:textColor="#1B1E2C"
            android:textFontWeight="500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cityAreaValue"/>
        <TextView
            android:id="@+id/maxStayDurationValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dm_sans"
            android:textColor="#1B1E2C"
            android:textFontWeight="500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carPlatesValue"/>
        <TextView
            android:id="@+id/totalToPayValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dm_sans"
            android:textColor="#1B1E2C"
            android:textFontWeight="500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maxStayDurationValue"/>
        <Button
            android:id="@+id/payNow"
            android:layout_width="0dp"
            android:layout_height="53dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/totalToPayValue"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/pay_button_background"
            android:enabled="false"
            android:text="Pay Now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/dm_sans"
            android:textFontWeight="700"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
